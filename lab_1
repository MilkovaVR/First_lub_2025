#include <iostream>
using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");

    cout << "Введите первое число:" << endl;
    int a;
    cin >> a;

    cout << "Введите второе число:" << endl;
    int b;
    cin >> b;

    cout << "Сумма чисел: " << a + b << endl;
    cout << "Разность чисел: " << a - b << endl;
    cout << "Произведение чисел: " << a * b << endl;

    return 0;
}
